<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginEnd="10dp"
              android:layout_marginStart="10dp"
              android:orientation="vertical">



    <com.pixel.calendarmeirlen.components.SubView
        android:id="@android:id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />

    <com.pixel.calendarmeirlen.components.WeekDaysView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

    <com.pixel.calendarmeirlen.components.CalendarRecyclerView
        android:id="@android:id/content"
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/customizable_calendar_height"
       />
    <com.pixel.calendarmeirlen.components.HeaderView
        android:id="@android:id/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>